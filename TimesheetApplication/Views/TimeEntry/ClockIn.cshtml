@model TimesheetApplication.Models.ClockIn



@{
    ViewData["Title"] = "ClockIn";
}

<link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/css/createUser.css")" rel="stylesheet" type="text/css" />


<h1>Clock In</h1>



<div class="row container-main">
    <div class="col-md-4">
        <form asp-action="ClockIn">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          
            <div class="form-group mb-2">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" class="all-btn" style="color: white; background-color: green" value="Clock In" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-btn mt-3">
    <a asp-action="Index">Back</a>
</div>

